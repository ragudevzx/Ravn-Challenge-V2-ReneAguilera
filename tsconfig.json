{
  "compilerOptions": {
    "types": [ "node", "express" ],
    "typeRoots": [ "../node_modules/@types" ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
, "user.ts"  ]
}
